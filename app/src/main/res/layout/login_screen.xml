<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="163dp"
        android:layout_height="77dp"
        android:src="@drawable/logo_lummii"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/back"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:textColor="#444444"
        android:textStyle="normal"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/asd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/back"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:textColor="#444444"
        android:textStyle="normal"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/asd"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/back"
        android:hint="Confirm Password"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:textColor="#444444"
        android:textStyle="normal"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_below="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:textColor="#ff6507"
        android:text="DRTF"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/rightcorner" />

    <EditText
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:background="@drawable/leftcorner"
        android:hint="Type as seen"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="#444444"/>

    <Button
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:text="M"
        android:background="#cccccc" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_height="55dp"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="20dp"
        android:text="Login"
        android:background="#ff6507"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textColor="#ffffff"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="485dp"
        android:textColor="#bbbbbb"
        android:text="By signing up, I agree to the"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:gravity="bottom"
         />
    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="535dp"
        android:textColor="#000"
        android:text="@string/terms_of_service"
        android:gravity="top"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="40dp"
        android:paddingBottom="5dp"
        android:textStyle="normal"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="535dp"
        android:textColor="#b0b0b0"
        android:text="and"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginLeft="180dp"
        android:gravity="top" />
    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="535dp"
        android:textColor="#000000"
        android:text="@string/privacy_and_policy"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginLeft="210dp"
        android:gravity="top" />
    <Button
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_height="55dp"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="20dp"
        android:background="#000"
        android:text="Already have a account ?"
        android:textColor="#ff6507"
        android:textSize="24dp"
        android:textStyle="normal"
        android:textAlignment="center"/>


</RelativeLayout>
</ScrollView>
